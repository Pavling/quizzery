- if current_user.created_quizzes.any?
  %p
    You haven't created any quizzes, why not try creating one?
    %br
    = link_to 'Create a quiz', new_quiz_path
- else
  - @quizzes.each do |quiz|
    %h2
      = quiz.name
    %br
    = link_to 'Show', quiz_path(quiz.id)
    = link_to 'Delete', quiz_path(quiz), method: :delete, data: {confirm: "Are you sure"}