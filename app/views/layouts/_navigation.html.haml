%header.navigation{:role => "banner"}
  .navigation-wrapper
    .logo
      = link_to 'Quizzery'
    %a#js-mobile-menu.navigation-menu-button{:href => "javascript:void(0)"} MENU
    %nav{:role => "navigation"}
      %ul#js-navigation-menu.navigation-menu.show
        %li.nav-link.more
          = link_to 'Games', games_path
          %ul.submenu
            %li
              = link_to 'Create Game', new_game_path
        %li.nav-link.more
          = link_to 'Quizzes', quizzes_path
          %ul.submenu
            %li
              = link_to 'Create quiz', new_quiz_path
        %li.nav-link.more
          = link_to 'Questions', questions_path
          %ul.submenu
            %li
              =link_to 'New Question', new_question_path

        - if current_user
          %li.nav-link.more
            = link_to current_user.email, user_path(current_user)
            %ul.submenu
              %li
                = link_to "Log out", destroy_user_session_path, method: :delete
              %li
                = link_to 'Edit profile', edit_user_path(current_user)
        - else
          %li.nav-link
            = link_to "Sign In", new_user_session_path
          %li.nav-link
            = link_to "Register", new_user_registration_path
          %li.nav-link
            = link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook)